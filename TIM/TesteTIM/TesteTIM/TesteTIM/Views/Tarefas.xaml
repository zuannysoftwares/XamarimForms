<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TesteTIM.Views.Tarefas">

    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="BackgroundColor"
                    Value="Transparent" />
        </Style>
    </ContentPage.Resources>


    <NavigationPage.TitleView>
        <StackLayout>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackLayout Grid.Row="0"
                             Grid.Column="0">
                    <Label Text="Tarefas"
                           TextColor="WhiteSmoke"
                           HorizontalOptions="Start"
                           Margin="0,10,0,0"
                           FontSize="20" />
                </StackLayout>

                <StackLayout Grid.Row="0"
                             Grid.Column="1">
                    <Button Text="X"
                            TextColor="WhiteSmoke"
                            FontSize="20"
                            Clicked="VoltarCommand"
                            HorizontalOptions="End" />
                </StackLayout>
            </Grid>
        </StackLayout>
    </NavigationPage.TitleView>
    <ScrollView>
        <StackLayout>
            <StackLayout>
                <Label HorizontalOptions="CenterAndExpand"
                       HorizontalTextAlignment="Center"
                       Text="AQUI SERÃO LISTADAS AS TAREFAS DO DEALER" />
            </StackLayout>

            <StackLayout VerticalOptions="EndAndExpand">
                <Grid ColumnSpacing="0"
                      Padding="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackLayout Grid.Row="0"
                                 Grid.Column="0">
                        <ImageButton Source="logo.png"
                                     WidthRequest="55"
                                     HeightRequest="55"
                                     BackgroundColor="Transparent"
                                     Clicked="MainPageCommand" />
                    </StackLayout>

                    <StackLayout
                                 Grid.Row="0"
                                 Grid.Column="1">
                        <ImageButton Source="reservas64.png"
                                     WidthRequest="55"
                                     HeightRequest="55"
                                     BackgroundColor="#01A9DB" />
                    </StackLayout>

                    <StackLayout 
                                 Grid.Row="0"
                                 Grid.Column="2">
                        <ImageButton Source="users.png"
                                     WidthRequest="55"
                                     HeightRequest="55"
                                     BackgroundColor="Transparent"
                                     Clicked="PerfilCommand" />
                    </StackLayout>
                </Grid>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>