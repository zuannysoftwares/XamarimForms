<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControleXF.Controles.ButtonPage">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Primeiro Botão" 
                    TextColor="BlueViolet"
                    Font="23"
                    BorderColor="Red"
                    BorderRadius="20"
                    BorderWidth="5"
                    
                    BackgroundColor="White" />
            <Button Text="Segundo Botão" />
            <Button BackgroundColor="Transparent" Image="logo.png" HeightRequest="100" HorizontalOptions="Start" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>