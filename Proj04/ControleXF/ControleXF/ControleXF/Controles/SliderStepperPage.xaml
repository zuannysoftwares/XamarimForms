<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControleXF.Controles.SliderStepperPage">
    <ContentPage.Content>
        <StackLayout>
            <Slider 
                Minimum="0"
                Maximum="100"
                Value="20"
                
                ValueChanged="MudaValor"
                />
            <Label x:Name="SliderResult" />

            <Stepper 
                Minimum="0"
                Maximum="10"
                Increment="1"
                Value="0"
                
                ValueChanged="MudaValorStepper"
                />
            <Label x:Name="StepperResult" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>