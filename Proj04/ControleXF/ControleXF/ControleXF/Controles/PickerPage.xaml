<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControleXF.Controles.PickerPage">
    <ContentPage.Content>
        <StackLayout>
            <Picker
                Title="Empresas de Tecnologia"
                TextColor="Coral"
                SelectedIndex="3"
                
                SelectedIndexChanged="ValorSelecionado"
                >
                <Picker.Items>
                    <x:String>Microsoft</x:String>
                    <x:String>Apple</x:String>
                    <x:String>Oracle</x:String>
                    <x:String>Google</x:String>
                    <x:String>Tesla</x:String>
                </Picker.Items> 
            </Picker>

            <Label x:Name="result" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>